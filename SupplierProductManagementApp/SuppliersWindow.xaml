<Window x:Class="SupplierProductManagementApp.SuppliersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suppliers Management" Height="400" Width="600">
    <Grid>
        <DataGrid x:Name="SuppliersDataGrid" Width="500" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"/>

        <Button Content="Add Supplier" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,300,0,0" Click="AddSupplierButton_Click"/>

        <Button Content="Block Supplier" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,300,0,0" Click="BlockSupplierButton_Click"/>

        <Button Content="Delete Supplier" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="340,300,0,0" Click="DeleteSupplierButton_Click"/>
    </Grid>
</Window>
