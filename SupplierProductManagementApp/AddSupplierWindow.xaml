<Window x:Class="SupplierProductManagementApp.AddSupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Supplier" Height="200" Width="400">
    <Grid>
        <Label Content="Enter supplier name"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,36,0,0"/>
        <TextBox x:Name="SupplierNameTextBox" Width="250" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,62,0,0"/>

        <CheckBox Content="Supplier is Blocked" x:Name="BlockedCheckBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="137,106,0,0" Width="200" Height="30"/>

        <Button Content="Add Supplier" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,128,0,0" Click="AddSupplierButton_Click"/>

        <TextBlock x:Name="ErrorMessage" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,120,0,0"/>
    </Grid>
</Window>
