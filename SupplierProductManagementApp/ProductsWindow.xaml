<Window x:Class="SupplierProductManagementApp.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Products Management" Height="400" Width="600">
    <Grid>
        <!-- DataGrid for displaying products -->
        <DataGrid x:Name="ProductsDataGrid" Width="500" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"/>

        <Button Content="Add Product" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="98,300,0,0" Click="AddProductButton_Click"/>

        <Button Content="Delete Product" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="368,300,0,0" Click="DeleteProductButton_Click"/>
    </Grid>
</Window>
