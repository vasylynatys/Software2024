<Window x:Class="SupplierProductManagementApp.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Product" Height="300" Width="400">
    <Grid>
        <Label Content="Enter name of product"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,28,0,0"/>
        <TextBox x:Name="ProductNameTextBox" Width="250" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,59,0,0" />
        <Label Content="Enter price of product"
       HorizontalAlignment="Left" VerticalAlignment="Top" Margin="74,89,0,0"/>
        <TextBox x:Name="ProductPriceTextBox" Width="250" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,120,0,0" />
        <Label Content="Enter id of supplier"
HorizontalAlignment="Left" VerticalAlignment="Top" Margin="74,150,0,0"/>
        <TextBox x:Name="SupplierIdTextBox" Width="250" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,188,0,0" />

        <Button Content="Add Product" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,231,0,0" Click="AddProductButton_Click"/>

        <TextBlock x:Name="ErrorMessage" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,150,0,0"/>
    </Grid>
</Window>
