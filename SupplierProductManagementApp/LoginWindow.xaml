<Window x:Class="SupplierProductManagementApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid>
        <TextBox x:Name="UsernameTextBox" Width="250" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"
                 Text="Enter Username" Foreground="Gray" GotFocus="UsernameTextBox_GotFocus" LostFocus="UsernameTextBox_LostFocus"/>

        <PasswordBox x:Name="PasswordBox" Width="250" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0"
                     Password="Enter Password" Foreground="Gray" GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus"/>

        <Button Content="Login" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,120,0,0" Click="LoginButton_Click"/>

        <TextBlock x:Name="ErrorMessage" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,160,0,0"/>

        <Button Content="Register" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,200,0,0" Click="RegisterButton_Click"/>
    </Grid>
</Window>
